@using DDDSouthWest.Website.Framework
@model DDDSouthWest.Website.Features.Public.Sponsors.SponsorsViewModel

@{
    ViewBag.Tab = PageTab.Sponsors;
    Layout = "~/Views/Shared/_LayoutFull.cshtml";
}

@section Header {
    <page-banner title="DDD South West 2022 Sponsors"/>
}

@section Css
{
    <link href="/css/sponsors.css" rel="stylesheet"/>
}

@section MainColBody {

    <h1>Sponsors</h1>

    <p>We'd like to give a special thanks to all of our sponsors. As a free community event it really wouldn't possible without them.</p>

    <div class="sponsors-list">
        @foreach (var sponsor in Model.Sponsors)
        {
            <div class="gutter-bottom-default gutter-top-default">
                    <a href="@sponsor.Url" rel="nofollow" target="_blank">
                        <img src="@sponsor.LogoPath" alt="@sponsor.Title" class="sponsor-logo">
                    </a>
            </div>
        }
    </div>

    
