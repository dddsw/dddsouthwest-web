    <div class="pure-control-group">
        <label asp-for="Website">Website:</label>
        <input asp-for="Website" class="pure-input-2-3" />
    </div>

    <div class="pure-control-group">
        <label asp-for="Twitter">Twitter:</label>
        <input asp-for="Twitter" class="pure-input-2-3" />
    </div>

    <div class="pure-control-group">
        <label asp-for="LinkedIn">LinkedIn:</label>
        <input asp-for="LinkedIn" class="pure-input-2-3" />
    </div>

